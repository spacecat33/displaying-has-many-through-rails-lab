<h2> <%= @doctor.name %> </h2>
<h3> <%= @doctor.department %> </h3>

<ul>
    <% @doctor.appointments.each do |appointment| %>
        <li><%=  appointment.readable_time %> - <%= link_to appointment.patient.name, patient_path(appointment.patient) %> with Dr <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %> </li>
    <% end %>
</ul>